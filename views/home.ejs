    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


    <style>
        .close {
            display: flex;
            border: none;
            font-size: 20px;
            background: rgb(251, 249, 127);
        }
        
        .alert {
            display: flex;
            width: 270px;
            align-items: center;
            background: rgb(251, 249, 127);
            height: 50px;
            padding-left: 10px;
            margin-top: 5px;
        }
        
        .escolha {
            display: flex;
        }
        
        .form-check-label {
            display: flex;
            justify-content: center;
            width: 150px;
            align-items: center;
        }
        
        input.form-check-input {
            display: flex;
            margin-left: 20px;
            width: 20px;
            height: 20px;
        }
        
        .clientes {
            background: linear-gradient(#ff8903d2, #ffffff);
            border-radius: 30px;
            padding: 12px 15px;
            margin-top: 15px;
            font-weight: bold;
            text-align: center;
        }
        
        .supermercado {
            background: linear-gradient(#ff8903d2, #ffffff);
            border-radius: 30px;
            padding: 5px 10px;
            margin-top: 15px;
            font-weight: bold;
        }
        
        .modal {
            width: 320px;
        }
        
        .modal-content {
            width: 320px;
        }
        
        .list-group a {
            text-decoration: none;
        }
        
        .list-group-item:hover {
            background: linear-gradient(#ff8903d2, #f5c013);
        }
        
        .color {
            padding: 15px;
            color: rgba(236, 236, 236, 0.986)
        }
        
        .color:hover {
            color: black;
        }
    </style>


</head>

<body>
    <header>
        <div class="card-left">
            <img src="/images/logo2.png" alt="logo" class="img_logo">
        </div>
        <div class="card-center">
            <div class="card-center-up">
                <nav onclick="acessProduct(event)">
                    <a href="produtos">
                        <span class="color">Shop List</span><img src="/images/low-res.png"><img src="/images/next.png"></a>
                </nav>
            </div>
            <div class="card-center-down">
                <nav>
                    <a href="#Sobre"> Sobre </a>
                </nav>
                <nav>
                    <a href="#QuemSomos">Quem Somos</a>
                </nav>
                <nav>
                    <a href="#Contato">Contato</a>
                </nav>
            </div>
        </div>
        <nav class="navbar navbar-light">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1"></span>

                <button class="navbar-toggler" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="nav-link"><span style="color:white;">Fazer Login</span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>


        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-fullscreen">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Menu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><a href="#Sobre">Sobre</a></li>
                            <li class="list-group-item"><a href="#QuemSomos">Quem somos</a></li>
                            <li class="list-group-item"><a href="#Contato">Contato</a></li>
                            <li class="list-group-item"><a href="usuarios">Área Restrita</a></li>



                            <div class="card-right">
                                <form action="/" method="POST">
                                    <label><b>LOGIN</b></label>
                                    <input type="email" name="email" id="email" placeholder="Email" required>
                                    <input type="password" name="password" id="password" placeholder="Senha" required minlength="5">
                                    <br>
                                    <select name="flag_usuario">
                                       <option value="master">Master</option>
                                       <option value="usuario">Usuário</option>
                                       <option value="supermercado">Cliente</option>
                                    </select>



                                    <button type="submit"><span style="font-size: 1.3em;">Entrar</span></button>
                                    <button><a href="cad_super">não tenho cadastro</button></a>



                                </form>

                            </div>


                        </ul>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>



    </header>
