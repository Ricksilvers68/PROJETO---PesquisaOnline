    <body>


        <main class="container">

            <div>


                <h3>Atualizar Dados</h3>


                <form action="/editar/<%= edit.id %>?_method=put" method="post">

                    <label for="name"></label>
                    <input type="text" name="name" id="name" placeholder="Nome completo" value="<%= edit.name %>">

                    <label for="email"></label>
                    <input type="email " name="email" id="email" placeholder="nome@gmail.com" value="<%= edit.email %>">

                    <label for="password"></label>
                    <input type="password" id="password" name="password_c" value="<%= edit.password %>">

                    <button type="submit">Atualizar</button>
                </form>
            </div>

        </main>



        

